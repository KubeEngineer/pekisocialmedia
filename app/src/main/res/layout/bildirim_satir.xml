<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bildirim_kutusu_background"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/bildirimIcerik"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/bildirim_post_image"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:text="Bu alan bildirim alan覺d覺r"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/bildirimIcerikResimsiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            android:text="Bu alan bildirim alan覺d覺r"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/bildirim_post_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
</RelativeLayout>